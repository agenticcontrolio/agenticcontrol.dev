client = Anthropic(api_key="your-api-key")

def simple_agent(goal: str) -> str:
    """
    A basic agent that reasons about a goal.

    Args:
        goal: What the agent should accomplish

    Returns:
        Agent's response
    """
    response = client.messages.create(
