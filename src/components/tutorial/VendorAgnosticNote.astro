---
// VendorAgnosticNote.astro
// Vendor-agnostic engineering note for tutorials

interface Props {
  title?: string;           // Default: "VENDOR-AGNOSTIC ENGINEERING NOTE"
  intro?: string;           // Default: "This tutorial uses:"
  items: string[];          // List items
  footer: string;           // Footer explanation (HTML allowed)
}

const {
  title = "üåç VENDOR-AGNOSTIC ENGINEERING NOTE",
  intro = "This tutorial uses:",
  items,
  footer
} = Astro.props;
---

<div class="mb-16 bg-slate-900/60 border border-slate-600/40 rounded-xl p-6">
  <h3 class="text-xl font-display text-amber mb-4 tracking-wide">
    {title}
  </h3>

  <p class="text-base text-slate-300 leading-relaxed mb-4">
    {intro}
  </p>

  <ul class="space-y-2 mb-4">
    {items.map((item) => (
      <li class="flex items-start gap-3 text-slate-300">
        <span class="text-amber flex-shrink-0">‚ñ∏</span>
        <span>{item}</span>
      </li>
    ))}
  </ul>

  <p class="text-sm text-slate-400 leading-relaxed" set:html={footer} />
</div>
