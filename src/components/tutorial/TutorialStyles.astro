---
// TutorialStyles.astro
// Shared CSS for all tutorials: Mermaid diagrams, modal, code copy buttons
---

<style is:global>
  /* Mermaid diagram styling */
  pre.mermaid {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 200px;
    background: transparent;
    border: none;
    padding: 0;
    margin: 0;
  }

  pre.mermaid svg {
    max-width: 100%;
    height: auto;
    filter: drop-shadow(0 0 10px rgba(4, 217, 255, 0.3));
  }

  /* Enhance node styling */
  .mermaid .node rect,
  .mermaid .node circle,
  .mermaid .node polygon {
    stroke-width: 2px !important;
    filter: drop-shadow(0 0 5px rgba(4, 217, 255, 0.4));
  }

  /* Enhance arrow styling */
  .mermaid .flowchart-link {
    stroke-width: 2px !important;
    filter: drop-shadow(0 0 3px rgba(4, 217, 255, 0.5));
  }

  /* Decision nodes (diamonds) get violet glow */
  .mermaid .node.decision rect,
  .mermaid .node.decision polygon {
    stroke: #8b5cf6 !important;
    filter: drop-shadow(0 0 5px rgba(139, 92, 246, 0.4));
  }

  /* Diagram Modal Styles */
  .diagram-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .diagram-modal.active {
    opacity: 1;
  }

  .diagram-modal-backdrop {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(5, 5, 6, 0.95);
    backdrop-filter: blur(10px);
    cursor: pointer;
  }

  .diagram-modal-content {
    position: relative;
    width: 75vw;
    height: 85vh;
    background: #0d0d0f;
    border: 2px solid #04d9ff;
    border-radius: 1rem;
    padding: 2rem;
    box-shadow:
      0 0 30px rgba(4, 217, 255, 0.4),
      0 0 60px rgba(4, 217, 255, 0.2);
    transform: scale(0.9);
    transition: transform 0.3s ease;
    overflow: visible;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .diagram-modal.active .diagram-modal-content {
    transform: scale(1);
  }

  .diagram-modal-close {
    position: absolute;
    top: -1rem;
    right: -1rem;
    width: 3rem;
    height: 3rem;
    background: #8b5cf6;
    border: 2px solid #8b5cf6;
    border-radius: 50%;
    color: white;
    font-size: 1.5rem;
    font-weight: bold;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
    box-shadow:
      0 0 20px rgba(139, 92, 246, 0.6),
      0 0 40px rgba(139, 92, 246, 0.3);
    font-family: 'JetBrains Mono', monospace;
  }

  .diagram-modal-close:hover {
    background: #04d9ff;
    border-color: #04d9ff;
    box-shadow:
      0 0 20px rgba(4, 217, 255, 0.6),
      0 0 40px rgba(4, 217, 255, 0.3);
    transform: rotate(90deg);
  }

  .diagram-modal-diagram {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    overflow: visible;
  }

  .diagram-modal-diagram pre {
    background: transparent;
    border: none;
    padding: 0;
    margin: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    transform: scale(2.6) !important;
    transform-origin: center center;
    pointer-events: none;
  }

  .diagram-modal-diagram svg {
    filter: drop-shadow(0 0 20px rgba(4, 217, 255, 0.5));
  }

  /* Add hover effect to diagrams - but NOT in modal */
  pre.mermaid:hover:not(.diagram-modal-diagram pre) {
    transform: scale(1.02);
    transition: transform 0.2s ease;
  }

  /* Disable hover effects inside modal */
  .diagram-modal-diagram pre.mermaid:hover {
    transform: scale(2.6) !important;
  }

  pre.mermaid::after {
    content: 'üîç Click to expand';
    position: absolute;
    bottom: 1rem;
    right: 1rem;
    background: rgba(4, 217, 255, 0.2);
    border: 1px solid rgba(4, 217, 255, 0.4);
    color: #04d9ff;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-size: 0.75rem;
    font-family: 'JetBrains Mono', monospace;
    opacity: 0;
    transition: opacity 0.2s ease;
    pointer-events: none;
  }

  pre.mermaid:hover::after {
    opacity: 1;
  }

  pre.mermaid {
    position: relative;
  }

  /* Copy code button styles */
  .copy-code-button {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    background: rgba(4, 217, 255, 0.1);
    border: 1px solid rgba(4, 217, 255, 0.3);
    border-radius: 0.375rem;
    color: #04d9ff;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    opacity: 0.7;
    z-index: 10;
  }

  .copy-code-button:hover {
    opacity: 1;
    background: rgba(4, 217, 255, 0.2);
    border-color: rgba(4, 217, 255, 0.6);
    box-shadow: 0 0 10px rgba(4, 217, 255, 0.3);
    transform: translateY(-1px);
  }

  .copy-code-button.copied {
    background: rgba(0, 255, 127, 0.2);
    border-color: rgba(0, 255, 127, 0.6);
    color: #00ff7f;
  }

  .copy-code-button svg {
    width: 14px;
    height: 14px;
    flex-shrink: 0;
  }

  .copy-button-text {
    white-space: nowrap;
  }

  /* Responsive adjustments for mobile devices */
  @media (max-width: 768px) {
    .diagram-modal-content {
      width: 95vw !important;
      height: 80vh !important;
      padding: 1rem !important;
    }

    .diagram-modal-diagram pre {
      transform: scale(1.2) !important;
    }

    .diagram-modal-diagram pre.mermaid:hover {
      transform: scale(1.2) !important;
    }

    .diagram-modal-close {
      width: 2.5rem !important;
      height: 2.5rem !important;
      font-size: 1.25rem !important;
      top: -0.75rem !important;
      right: -0.75rem !important;
    }
  }

  /* Responsive adjustments for tablets */
  @media (min-width: 769px) and (max-width: 1024px) {
    .diagram-modal-content {
      width: 85vw !important;
      height: 82vh !important;
      padding: 1.5rem !important;
    }

    .diagram-modal-diagram pre {
      transform: scale(1.8) !important;
    }

    .diagram-modal-diagram pre.mermaid:hover {
      transform: scale(1.8) !important;
    }

    .diagram-modal-close {
      width: 2.75rem !important;
      height: 2.75rem !important;
      font-size: 1.35rem !important;
    }
  }
</style>
